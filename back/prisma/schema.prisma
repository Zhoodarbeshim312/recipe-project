generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  avatar    String?   @default("https://img.pikbest.com/png-images/20250228/user-profile-vector-flat-illustration-avatar-person-icon-gender-neutral-silhouette_11563975.png!sw800")
  name      String
  email     String    @unique
  password  String
  recipe    Recipe[]
  comment   Comment[]
  save      Save[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Recipe {
  id              String     @id @default(uuid())
  images          String[]
  description     String
  ingredients     String[]
  instructions    String[]
  fill            Int
  cookingTime     String
  preparationTime String
  categories      String
  comment         Comment[]
  user            User?      @relation(fields: [userId], references: [id])
  userId          String?
  nutrition       Nutrition?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  saves           Save[]
}

model Nutrition {
  id                String  @id @default(uuid())
  calories          Int?
  carbohydrate      Int?
  cleanCarbohydrate Int?
  grease            Int?
  protein           Int?
  sodium            Int?
  recipe            Recipe? @relation(fields: [recipeId], references: [id])
  recipeId          String? @unique
}

model Comment {
  id        Int      @id @default(autoincrement())
  recipe    Recipe?  @relation(fields: [recipeId], references: [id])
  recipeId  String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Save {
  id       Int     @id @default(autoincrement())
  user     User?   @relation(fields: [userId], references: [id])
  userId   String?
  recipeId String?
  recipe   Recipe? @relation(fields: [recipeId], references: [id])

  @@unique([recipeId, userId])
}
